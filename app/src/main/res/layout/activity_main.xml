<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.enrique.calculadora.MainActivity"
    android:background="@drawable/im1">



    <EditText
        android:id="@+id/cj1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ingrese numero"
        android:textColorHint="#ffffff"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:textColor="#27fa01"
        />
    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/cj2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ingrese numero"
        android:textColorHint="#ffffff"
        android:inputType="number"
        android:textColor="#27fa01"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_above="@+id/button4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:id="@+id/rs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:hint="0.0"
                android:textColor="#0aec0e"
                android:textAlignment="center"
                android:textColorHint="#ec0a0a"
                android:textSize="40dp" />
        </RelativeLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/button2"
            android:layout_alignRight="@+id/button2"
            android:layout_marginTop="20dp"
            android:background="@drawable/a1"


            android:onClick="sumar"
            android:text="+"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button2"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button"
            android:layout_marginTop="14dp"
            android:background="@drawable/a1"
            android:onClick="restar"
            android:text="-"
            android:textSize="35sp" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button2"
            android:layout_marginTop="13dp"
            android:background="@drawable/a1"
            android:onClick="multiplicar"
            android:text="x"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button3"
            android:layout_marginTop="11dp"
            android:background="@drawable/a1"
            android:onClick="dividir"
            android:text="/"
            android:textSize="25sp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/button4"
            android:layout_marginTop="8dp"
            android:background="@drawable/a1"
            android:onClick="igual"
            android:text="="
            android:textSize="25sp" />

    </RelativeLayout>


</LinearLayout>
